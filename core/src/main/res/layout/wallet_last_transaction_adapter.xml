<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:backgroundTint="@color/grey_background"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="8dp">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ImageView
           android:id="@+id/img_wallet_transaction"
           android:layout_width="48dp"
           android:layout_height="48dp"
           android:layout_marginStart="12dp"
           android:layout_centerVertical="true"
           android:src="@color/grey_text"
           android:contentDescription="@string/app_name" />

       <TextView
           android:id="@+id/tv_name_wallet_transaction"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="@string/app_name"
           android:textStyle="bold"
           android:textColor="@color/black"
           android:textSize="14sp"
           android:layout_marginStart="12dp"
           android:layout_centerVertical="true"
           android:layout_marginEnd="8dp"
           android:layout_toStartOf="@+id/tv_price_wallet_transaction"
           android:layout_toEndOf="@+id/img_wallet_transaction"/>

       <TextView
           android:id="@+id/tv_price_wallet_transaction"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_centerVertical="true"
           android:text="@string/price"
           tools:ignore="TextContrastCheck" />
   </RelativeLayout>


</androidx.cardview.widget.CardView>